@model PruebasSistemaInventario.Models.Usuario
@{
    //Layout sirve para especificar el uso de una plantilla(encabezado y pie de pagina) para envolver un fragmento de codigo HTML
    Layout = "_LayoutLogin";
    //ViewData permite compartir datos entre una acción del controlador y una vista que se va a renderizar.
    //Con esto puedo enviar datos entre las vistas de los controladores y acceder a ellas
    ViewData["Title"] = "Iniciar sesion";
    if (ViewData["UserIncorret"]==null)
    {
        ViewData["State"] = "hidden";
    }else
    {
        ViewData["State"] = "";
    }

    
}
<main class="form-signin w-100 m-auto">
    <form asp-action="Index" method="post">
        <img class="mb-4" src="~/imgs/icoLogin.png"
             alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Inicio de sesion</h1>
        <div class="form-floating">
            <input type="text" asp-for="Nombre" class="form-control" id="floatingInput"
                   placeholder="Usuario">
            <label asp-for="Nombre">Usuario</label>
        </div>
        <br />
        <div class="form-floating">
            <input type="password" class="form-control" asp-for="Contrasenia"
                   id="floatingPassword" placeholder="Contraseña">
            <label for="floatingPassword" asp-for="Contrasenia">Contraseña</label>
        </div>
        <br />
        <div class="alert alert-warning" role="alert" @ViewData["State"]>
            <span>@ViewData["UserIncorret"]</span>
        </div>
        <p><a asp-action="Registrar" class="link-underline-light">Registrarse</a></p>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Iniciar sesion</button>
        <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
    </form>
</main>