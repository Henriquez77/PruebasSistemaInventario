@model PruebasSistemaInventario.Models.Usuario

@{
    ViewData["Title"] = "Detalles de usuario";
}
<div class="container">
<h1>Detalles de usuario</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Contraseña")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contrasenia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class = "col-sm-10">
                @{
                    if (Model.RolId == 1)
                    {
                        @Html.DisplayName("Administrador")
                    }

                    else
                    {
                        @Html.DisplayName("Cliente")
                    }
                }
        </dd>
    </dl>
</div>
<div>
        <a asp-action="Edit" asp-route-id="@Model?.UsuarioId" class="btn btn-success">Editar</a> |
        <a asp-action="Index" class="btn btn-warning">Volver</a>
</div>
</div>